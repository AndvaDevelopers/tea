<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0097A7"
    tools:context=".UserProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:gravity="center"
            android:background="#0097A7"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/userface"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/shape1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:backgroundTint="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#111"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="      6369789210"
                android:drawableStart="@drawable/ph"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#111"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="      andvadevelopers@gmail.com"
                android:drawableStart="@drawable/mail"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#111"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                app:cardCornerRadius="20dp"
                android:layout_weight="1"
                android:layout_height="150dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:text="+300"
                        android:textColor="#0097A7"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/alfa_slab_one"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="purchase amount"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/alfa_slab_one"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="20dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    app:cardCornerRadius="20dp"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#FFFFFF">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="+300"
                            android:textColor="#0097A7"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/alfa_slab_one"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="paid amount"
                            android:textColor="#111"
                            android:textStyle="bold"
                            android:textSize="12dp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/alfa_slab_one"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="300dp"

        app:cardElevation="50dp"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        android:padding="10dp"
        android:layout_height="100dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="KOILRAJ L"
            android:textColor="#0097A7"
            android:id="@+id/nameska"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:fontFamily="@font/alfa_slab_one"
            android:gravity="center"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>